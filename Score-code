#include <stdio.h>

int main(void)
{
    int nx = 0, ny = 0;
    int x = 0, y = 0;
    printf("Quelle est la taille de votre tableau: longeur=.. largeur=..  ?");
    scanf("%d,%d", &x,&y);

    if (x < 0, y < 0)
        printf("Votre longeur ou largeur est nÃ©gatif, redonnez votre taille souhaitez.\n");
        scanf("%d,%d", &x,&y);

    int monTableau[x][y];
    for (nx = 0; nx < x; nx++)
    {
        for (ny = 0; ny < y; ny++)
        {
            printf("La valeur de l'entier entier %d%d est     ?\n", nx,ny);
            scanf(" %d", &monTableau[nx][ny]);
        }
    }
    for (nx = 0; nx < x; nx++)
    {
        printf("\n");
        for (ny = 0; ny < y; ny++)
        {
            printf("%d  ", monTableau[nx][ny]);
        }
    }
    printf("\n");
    return 0;
}
